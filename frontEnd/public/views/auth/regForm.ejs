<div class="form-container-register hide-register-form">
  <form action="" method="post" autocomplete="off">
    <h1>Register Form</h1>
    <div class="main-container">
      <div class="group">
        <label for="name" class="label">Name:</label>
        <input
          type="name"
          name="name"
          class="inputRegisterForm registerName"
          autocomplete="off"
        />
      </div>

      <div class="group">
        <label for="email" class="label">Email:</label>
        <input
          type="email"
          name="email"
          class="inputRegisterForm registerEmail"
          autocomplete="off"
        />
      </div>

      <div class="group">
        <label for="password" name="password" class="label">Password:</label>
        <input
          type="password"
          class="inputRegisterForm registerPassword"
          autocomplete="off"
        />
      </div>
      <div class="message">
        <p class="message-group registerError hide">
          Aceste date exista deja in baza de date!
        </p>
        <p class="message-group registerErrorEmptyName hide">
          Nu ai completat campul nume
        </p>
        <p class="message-group registerSuccess hide">
          Te-ai Inregistrat cu success!
        </p>
      </div>
    </div>

    <button type="submit" class="btn btn-register">Register</button>
  </form>
</div>
